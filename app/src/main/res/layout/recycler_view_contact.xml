<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Daniile"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_view_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_name"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="sans-serif-light"
            android:lines="1"
            android:text="Url"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/callBtn"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_view_name"
            android:layout_alignBottom="@+id/text_view_name"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="-22dp"
            android:layout_toEndOf="@+id/text_view_name"
            app:srcCompat="@drawable/ic_baseline_video_call_24"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D5D4D4" />


</LinearLayout>